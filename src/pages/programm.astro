        </div>
    </main>
</Layout>

<style>
    .time {
        font-size: 18px;
        line-height: 41px;
        letter-spacing: -1.95px;
        font-weight: bold;
        color: #1E1E1E;
        width: 40%;
        padding-right: 1.7rem;
        padding-top: 0.3rem;
        text-align: end;
    }
    .program {
        width: 65.4rem;
        height: fit-content;
        padding-top: 3.8rem;
        padding-bottom: 4.6rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }
    .program-first {
        background-color: #D88788;
        margin-bottom: 6.2rem;
    }
    .program-second {
        background-color: #F8FBFD;
    }
    .row:has(.filler) {
        flex: 1 1 auto;
    }
    .filler::before {
        content: "";
        display: inline-block;
        height: 100%;
    }
    .second-text {
        font-size: 18px;
        line-height: 24px;
        font-weight: normal;
        padding-bottom: 0.6rem;
        padding-top: 0.6rem;
        padding-left: 1.5rem;
    }
    .program-first .second-text {
        color: #F8FBFD;
    }
    .program-second .second-text {
        color: #D96480;
    }
    .main-text {
        color: #1E1E1E;
        font-size: 18px;
        line-height: 24px;
        font-weight: bold;
        padding-bottom: 0.6rem;
        padding-top: 0.6rem;
        padding-left: 1.5rem;
    }
    .day {
        font-size: 49px;
        font-weight: bold;
        line-height: 90px;
        letter-spacing: -3.28px;
        color: #D88788;
        text-align: center;
    }
    .month {
        font-size: 87px;
        font-weight: bold;
        line-height: 118px;
        letter-spacing: -5.83px;
        color: #1E1E1E;
        text-align: center;
    }
    .date {
        text-align: center;
        font-size: 154px;
        font-weight: bold;
        line-height: 80px;
        letter-spacing: -10.32px;
        color: #1E1E1E;
    }
    main {
        background-color: #F1F1F1;
        padding-top: 6rem;
        padding-bottom: 6.4rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    @media only screen and (min-width: 992px) {
        main {
            background-color: #F1F1F1;
            padding-top: 8rem;
            padding-bottom: 6.4rem;
            padding-left: 2.5rem;
            padding-right: 2.5rem;
        }
        .program {
            width: 65.4rem;
            height: 75.5rem;
            padding-top: 3.8rem;
            padding-bottom: 4.6rem;
            padding-left: 5.3rem;
            padding-right: 11rem;
        }
        .time {
            font-size: 30px;
            line-height: 41px;
            letter-spacing: -1.95px;
            font-weight: bold;
            color: #1E1E1E;
            width: 28%;
            padding-right: 1.7rem;
            padding-top: 0.3rem;
            text-align: end;
        }
        .second-text {
            font-size: 18px;
            line-height: 24px;
            font-weight: normal;
            padding-bottom: 0.6rem;
            padding-top: 0.6rem;
            padding-left: 2.8rem;
        }
        .main-text {
            color: #1E1E1E;
            font-size: 18px;
            line-height: 24px;
            font-weight: bold;
            padding-bottom: 0.6rem;
            padding-top: 0.6rem;
            padding-left: 2.8rem;
        }
    }

    @media screen
    and (min-width: 1200px) {
        main {
            padding-top: 8rem;
            padding-bottom: 6.4rem;
            padding-left: 16.5rem;
            padding-right: 16.5rem;
        }
    }
</style>