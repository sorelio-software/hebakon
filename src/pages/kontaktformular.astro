---
import FormCard from "../components/FormCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kontaktformular">
    <main class="container-fluid">
        <div class="row">
            <div class="col">
                <FormCard />
            </div>
            <div class="col">
                <div class="card shadow info-card">
                    <div class="card-body">
                        <h3>INFO</h3>
                    </div>
                </div>
            </div>
        </div>

    </main>
</Layout>

<style>
    h3 {
        font-size: 2.8rem;
        font-weight: 800;
        line-height: 61px;
    }

    .info-card {
        background-color: #D88788;
        width: 34.7rem;
    }
    .info-card .card-body {
        padding-top: 6.6rem;
        padding-left: 5.1rem;
        padding-right: 12.5rem;
        padding-bottom: 7.3rem;
    }
    .info-card h3 {
        color: #F8FBFD;
    }
    main {
        background-color: #F1F1F1;
        padding-top: 7.8rem;
        padding-left: 16.6rem !important;
        padding-right: 16rem !important;
        padding-bottom: 7.1rem;
    }
    .row {
        gap: 3rem;
    }
    .col {
        padding: 0;
    }
</style>
