<style>
    .speaker-card {
        background-color: #D88788;
        color: #F8FBFD;
        border: none;
        width: 23rem;
    }
    .speaker-card .card-body {
        padding-top: 5.5rem;
        padding-left: 1.9rem;
        padding-bottom: 5.8rem;
        padding-right: 2.2rem;
    }
    .speaker-card h4 {
        font-size: 40px;
        font-weight: bold;
        line-height: 55px;
        margin-bottom: 2.6rem;
    }
    .speaker-card p {
        font-size: 18px;
        font-weight: 300;
        line-height: 30px;
    }
    .col {
        padding: 0;
    }
    .card-row {
        gap: 4.75rem;
        margin-bottom: 4.6rem;
        flex-wrap: nowrap;
    }
    .card-row:last-of-type {
        margin-bottom: 0;
    }
    main {
        background-color: #F1F1F1;
        padding-left: 15.6rem;
        padding-right: 16.7rem;
        padding-top: 8rem;
        padding-bottom: 14.2rem;
    }
</style>